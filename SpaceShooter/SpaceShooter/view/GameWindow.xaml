<Window x:Class="SpaceShooter.view.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceShooter.view"
        mc:Ignorable="d"
        xmlns:res="clr-namespace:SpaceShooter.Res"
        Title="{x:Static res:Strings.GameWindow}" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas.Background>
                <ImageBrush ImageSource="/view/Image/espace.jpg" />
            </Canvas.Background>
        </Canvas>
        <Label x:Name="scoreLabel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Foreground="White" Content="{x:Static res:Strings.Score}"/>
    </Grid>

</Window>
